<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_dialog_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示一个平台的dialog" />

    <Button
        android:id="@+id/btn_dialog_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示一个带普通列表的dialog" />

    <Button
        android:id="@+id/btn_dialog_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示一个带单选列表的dialog" />

    <Button
        android:id="@+id/btn_dialog_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示一个带复选框列表的dialog" />
</LinearLayout>
